<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <!-- sticky -->">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag ("nextroom_logo2bis.png") %>
    <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Profile", user_path(current_user), class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://ca.slack-edge.com/T02NE0241-UHW32V2J1-d3d98e55b2bf-48", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile",  user_path(current_user), class: "dropdown-item" %>
            <hr>
            <% if policy(Boxe).create? %>
              <%= link_to "Rent your boxe", new_box_path, class: "dropdown-item" %>
            <% end %>
            <hr>

              <%= link_to "My Bookings", reservations_path, class: "dropdown-item" %>
              <hr>

            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>

      <% else %>
      <li class="nav-item">
        <% if policy(Boxe).create? %>
        <%= link_to "Rent your boxe", new_box_path, class: "nav-link" %>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
